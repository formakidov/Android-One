<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="default_selector">@drawable/default_item_selector</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primary_text_color">@color/primary_text_dark</item>
        <item name="secondary_text_color">@color/secondary_text_dark</item>
        <item name="hint_text_color">@color/hint_text_dark</item>
    </style>

    <style name="AppTheme.Blue.Light" parent="Base.AppTheme">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorAccent">@color/green_a400</item>
    </style>

    <style name="AppTheme.Pink" parent="Base.AppTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">@color/cyan_a400</item>
    </style>

    <style name="TextView.Error" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">?attr/primary_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>